            <div className="flex h-screen items-center justify-center bg-background text-foreground">
                <p>Loading campaign...</p>
            </div>
        )
    }

    return (
        <main className="h-screen w-screen">
            <EmailEditor
                html={html}
                assets={assets}
                subjectLine={subjectLine}
